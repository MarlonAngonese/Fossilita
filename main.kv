        MDLabel:
            text: "Funcionamento do Tanque Séptico"
            halign: "left"
            pos_hint: {"center_x": .5, "center_y": .83}
            size_hint_x: 0.79
            font_style: "H6"
            color: '#35506d'
            canvas.before:
                Color:
                    rgba: 0, 0, 1, 1
                Line:
                    width: 1
                    points: [self.x, self.height - self.y * 0.64, self.x + self.width, self.height - self.y * 0.64]

    MDBoxLayout:
        id: box_layout
        size_hint_x: .8
        orientation: 'vertical'
        adaptive_height: True
        pos_hint: {'top': .75, "center_x": .5}
    
        ScrollView:
            id: scrollview
